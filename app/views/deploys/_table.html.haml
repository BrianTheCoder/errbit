%table.errs
  %thead
    %tr
      %th App
      %th When
      %th Who
      %th Message
      %th Repository
      %th Revision
  %tbody
    - deploys.each do |deploy|
      %tr
        %td.app
          = deploy.app.name
          %span.environment= deploy.environment
        %td.latest= deploy.created_at.to_s( deploy.created_at.year == Time.now.year ? :micro : :micro_with_year )
        %td.who= deploy.username
        %td.message= deploy.message
        %td.repository= deploy.repository
        %td.revision= deploy.short_revision

